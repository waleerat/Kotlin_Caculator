<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/inputTextView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        android:gravity="right|center_vertical|bottom"
        android:background="#efefef"
        android:text="0"
        android:textSize="48sp"
        android:maxLength="12"

        />

    <!--Row 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/bntOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="1"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="2"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntTree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="3"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="/"
            android:textSize="35sp"
            android:onClick="onOperator"
            />
    </LinearLayout>
    <!--Row 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:textSize="35sp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/bntFore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="4"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="5"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="6"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="*"
            android:textSize="35sp"
            android:onClick="onOperator"
            />
    </LinearLayout>
    <!--Row 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/bntSeven"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="7"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="8"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="9"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="-"
            android:textSize="55sp"
            android:onClick="onOperator"
            />
    </LinearLayout>
    <!--Row 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/bntDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="."
            android:textSize="45sp"
            android:onClick="onDecimalPoint"
            />
        <Button
            android:id="@+id/bntZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="0"
            android:textSize="35sp"
            android:onClick="onDigit"
            />
        <Button
            android:id="@+id/bntClr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="CLR"
            android:textSize="25sp"
            android:onClick="onClear"
            />
        <Button
            android:id="@+id/bntAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="+"
            android:textSize="35sp"
            android:onClick="onOperator"
            />
    </LinearLayout>
    <!--Row 5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bntAnswer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:text="="
            android:textSize="35sp"
            android:onClick="onEqual"
            />
    </LinearLayout>
</LinearLayout>